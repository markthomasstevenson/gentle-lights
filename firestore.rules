rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to get user ID
    function getUserId() {
      return request.auth.uid;
    }

    // Helper function to check if user is a member of a family
    function isFamilyMember(familyId) {
      return isAuthenticated() && 
             exists(/databases/$(database)/documents/families/$(familyId)/members/$(getUserId()));
    }

    // Families collection
    match /families/{familyId} {
      // Allow read if user is a member of the family
      allow read: if isFamilyMember(familyId);
      
      // Allow create if user is authenticated (for creating new family)
      allow create: if isAuthenticated() && 
                       request.resource.data.keys().hasAll(['pairingCode', 'recoveryCode', 'createdAt']);
      
      // Allow update only for pairing/recovery codes (restricted)
      // In practice, these should rarely change, but we allow updates for admin purposes
      allow update: if isFamilyMember(familyId) && 
                       request.resource.data.diff(resource.data).affectedKeys().hasOnly(['pairingCode', 'recoveryCode']);

      // Family members subcollection
      match /members/{memberId} {
        // Allow read if user is a member of the family
        allow read: if isFamilyMember(familyId);
        
        // Allow create if:
        // 1. User is authenticated
        // 2. Creating their own member doc OR joining via pairing code
        // 3. Member data includes required fields
        allow create: if isAuthenticated() && 
                         (memberId == getUserId() || 
                          // Allow if joining via pairing code (we'll validate pairing code in app logic)
                          request.resource.data.keys().hasAll(['uid', 'role', 'displayName', 'joinedAt'])) &&
                         request.resource.data.uid is string &&
                         request.resource.data.role is string &&
                         request.resource.data.displayName is string &&
                         request.resource.data.joinedAt is timestamp;
        
        // Allow update only for displayName (users can update their own name)
        allow update: if isAuthenticated() && 
                         (memberId == getUserId() || isFamilyMember(familyId)) &&
                         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['displayName']);
        
        // Allow delete only if user is deleting themselves (or admin - future enhancement)
        allow delete: if isAuthenticated() && memberId == getUserId();
      }

      // Days subcollection
      match /days/{dateKey} {
        // Allow read if user is a member of the family
        allow read: if isFamilyMember(familyId);
        
        // Allow create/update if user is a member of the family
        // Windows structure: { windowName: { state, completedAt, completedByUid } }
        allow write: if isFamilyMember(familyId) &&
                        request.resource.data.keys().hasOnly(['windows']) &&
                        request.resource.data.windows is map;
      }
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

